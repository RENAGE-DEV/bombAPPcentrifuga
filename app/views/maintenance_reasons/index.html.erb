<div class="container mt-4">
  <div class="page-header d-flex justify-content-between align-items-center mb-4">
    <h1>Motivo de Mantenimiento</h1>
    <%= link_to new_maintenance_reason_path, class: "btn btn-success" do %>
      <i class="fas fa-plus me-2"></i>Nuevo Motivo
    <% end %>
  </div>

  <div class="card">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th style="width: 70%">Nombre</th>
            <th style="width: 30%; text-align: center;">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @maintenance_reasons.each do |reason| %>
            <tr>
              <td class="align-middle">
                <div class="reason-name">
                  <i class="fas fa-tools text-primary me-2"></i>
                  <strong><%= reason.name %></strong>
                </div>
              </td>
              <td>
                <div class="d-flex justify-content-center gap-3">
                  <%= link_to edit_maintenance_reason_path(reason), class: "btn btn-edit", title: "Editar" do %>
                    <i class="fas fa-pencil-alt"></i>
                  <% end %>
                  
                  <%= button_to maintenance_reason_path(reason), 
                      method: :delete, 
                      class: "btn btn-delete",
                      title: "Eliminar",
                      form: { 
                        style: 'display: inline-block',
                        data: { turbo_confirm: "¿Está seguro de eliminar este motivo de mantenimiento?" }
                      } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
  /* ... otros estilos ... */

  /* Botones de acción */
  .btn {
    width: 35px;
    height: 35px;
    padding: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    transition: all 0.2s ease;
    font-size: 0.9rem;
  }

  .btn-success {
    width: auto;
    height: auto;
    padding: 0.625rem 1.25rem;
    background-color: #059669;
    border: none;
    color: white;
    box-shadow: 0 2px 4px rgba(5, 150, 105, 0.2);
  }

  .btn-success:hover {
    background-color: #047857;
    transform: translateY(-1px);
  }

  .btn-edit {
    background-color: #f3f4f6;
    color: #4b5563;
    border: 1px solid #e5e7eb;
  }

  .btn-edit:hover {
    background-color: #4b5563;
    color: white;
    transform: translateY(-1px);
  }

  .btn-delete {
    background-color: #fee2e2;
    color: #dc2626;
    border: 1px solid #fecaca;
  }

  .btn-delete:hover {
    background-color: #dc2626;
    color: white;
    transform: translateY(-1px);
  }

  /* Espaciado entre botones */
  .gap-3 {
    gap: 0.5rem !important;
  }

  /* Alineación vertical */
  .align-middle {
    vertical-align: middle !important;
  }

  /* Tooltips para los botones */
  .btn[title] {
    position: relative;
  }

  .btn[title]:hover::after {
    content: attr(title);
    position: absolute;
    bottom: -30px;
    left: 50%;
    transform: translateX(-50%);
    padding: 4px 8px;
    background-color: #1f2937;
    color: white;
    font-size: 0.75rem;
    border-radius: 4px;
    white-space: nowrap;
  }
</style>
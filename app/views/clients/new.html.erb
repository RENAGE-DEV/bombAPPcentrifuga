<% content_for :title, "Nuevo Cliente" %>

<div class="page-header d-flex justify-content-between align-items-center mb-4">
  <h1>Nuevo Cliente</h1>
  <%= link_to clients_path, class: "btn btn-outline-secondary" do %>
    <i class="fas fa-arrow-left me-2"></i>Volver
  <% end %>
</div>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <%= form_with(model: @client, local: true) do |form| %>
      <% if @client.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <%= pluralize(@client.errors.count, "error") %> impidieron guardar este cliente:
          </h4>
          <ul class="mb-0">
            <% @client.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="card">
        <div class="card-body">
          <div class="row g-4">
            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :name, "Nombre", class: "form-label fw-bold" %>
                <%= form.text_field :name, class: "form-control form-control-lg", placeholder: "Ingrese el nombre" %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :email, "Correo Electrónico", class: "form-label fw-bold" %>
                <%= form.email_field :email, class: "form-control form-control-lg", placeholder: "ejemplo@correo.com" %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :phone, "Teléfono", class: "form-label fw-bold" %>
                <%= form.telephone_field :phone, class: "form-control form-control-lg", placeholder: "+56 9 XXXX XXXX" %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :address, "Dirección", class: "form-label fw-bold" %>
                <%= form.text_field :address, class: "form-control form-control-lg", placeholder: "Ingrese la dirección" %>
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-end mt-4">
            <%= link_to "Cancelar", clients_path, class: "btn btn-light btn-lg me-2" %>
            <%= form.submit "Guardar Cliente", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .page-header h1 {
    font-size: 2rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0;
  }

  .card {
    border: none;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }

  .form-label {
    color: #4b5563;
    margin-bottom: 0.5rem;
  }

  .form-control {
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    padding: 0.75rem 1rem;
    transition: all 0.2s ease;
  }

  .form-control:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.1);
  }

  .form-control::placeholder {
    color: #9ca3af;
  }

  .btn-lg {
    padding: 0.75rem 1.5rem;
    font-weight: 500;
  }

  .btn-primary {
    background-color: #1e40af;
    border-color: #1e40af;
  }

  .btn-primary:hover {
    background-color: #1e3a8a;
    border-color: #1e3a8a;
  }

  .btn-light {
    background-color: #f3f4f6;
    border-color: #f3f4f6;
    color: #4b5563;
  }

  .btn-light:hover {
    background-color: #e5e7eb;
    border-color: #e5e7eb;
    color: #374151;
  }

  .alert-danger {
    border: none;
    border-radius: 8px;
    background-color: #fee2e2;
    color: #dc2626;
  }
</style>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="card shadow-sm">
    <div class="card-header bg-white py-3">
      <h5 class="card-title mb-0">
        <i class="fas fa-user-circle me-2 text-primary"></i>
        Detalles del Cliente
      </h5>
    </div>
    
    <div class="card-body">
      <div class="row g-4">
        <div class="col-md-6">
          <div class="mb-3">
            <label class="form-label text-muted">Nombre</label>
            <p class="h6"><%= @client.name %></p>
          </div>
          <div class="mb-3">
            <label class="form-label text-muted">Email</label>
            <p class="h6"><%= @client.email %></p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <label class="form-label text-muted">Teléfono</label>
            <p class="h6"><%= @client.phone %></p>
          </div>
          <div class="mb-3">
            <label class="form-label text-muted">Dirección</label>
            <p class="h6"><%= @client.address %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="card-footer bg-white py-3">
      <div class="d-flex gap-2">
        <%= link_to edit_client_path(@client), class: "btn btn-primary" do %>
          <i class="fas fa-edit me-2"></i>Editar Cliente
        <% end %>
        <%= link_to clients_path, class: "btn btn-light" do %>
          <i class="fas fa-arrow-left me-2"></i>Volver
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .card {
    border: none;
    border-radius: 12px;
  }

  .card-header {
    border-bottom: 1px solid #e2e8f0;
  }

  .card-title {
    color: #1e3a8a;
    font-weight: 600;
  }

  .form-label {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .h6 {
    color: #1e293b;
    margin-bottom: 0;
  }

  .btn {
    padding: 0.5rem 1rem;
    font-weight: 500;
    border-radius: 8px;
  }

  .btn-primary {
    background-color: #1e3a8a;
    border: none;
  }

  .btn-light {
    background-color: #f1f5f9;
    border: 1px solid #e2e8f0;
    color: #64748b;
  }
</style>
